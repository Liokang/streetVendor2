<%- include('../boilerplate/header') %>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
  <div class="container">
    <a class="navbar-brand fw-bold fs-4" href="#">ATUL</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText" 
      aria-controls="navbarText" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="/secretuser">User Portal</a></li>
        <li class="nav-item"><a class="nav-link" href="/secretvendor">Vendor Portal</a></li>
      </ul>
      <% if (isloggedIn) { %>
        <a class="btn btn-outline-light rounded-pill px-3" href="/logout">Logout</a>
      <% } else { %>
        <a class="btn btn-outline-light rounded-pill px-3 me-2" href="/login">Login</a>
        <a class="btn btn-warning rounded-pill px-3" href="/signup">Sign Up</a>
      <% } %>
    </div>
  </div>
</nav>

<!-- Vendor Login Form -->
<section class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
  <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 400px; width: 100%;">
    <div class="card-body">
      <h3 class="text-center fw-bold mb-4">Vendor Login</h3>
      <form action="/loginvendor" method="POST">
        <div class="form-group mb-3">
          <label for="phoneInput" class="fw-semibold">Phone Number</label>
          <input type="text" 
                 class="form-control form-control-lg rounded-pill px-3" 
                 id="phoneInput" 
                 name="phoneno" 
                 placeholder="Enter phone number">
        </div>
        <div class="form-group mb-4">
          <label for="passwordInput" class="fw-semibold">Password</label>
          <input type="password" 
                 class="form-control form-control-lg rounded-pill px-3" 
                 id="passwordInput" 
                 name="password" 
                 placeholder="Enter your password">
        </div>
        <button type="submit" class="btn btn-dark w-100 rounded-pill py-2">Login</button>
      </form>
      <p class="text-center mt-3 text-muted">
        Not registered? <a href="/signup" class="fw-semibold text-dark">Sign Up</a>
      </p>
    </div>
  </div>
</section>

<%- include('../boilerplate/footer') %>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }

  .card {
    background: #ffffff;
  }

  .form-control:focus {
    border-color: #000;
    box-shadow: 0 0 0 0.2rem rgba(0,0,0,0.15);
  }

  .btn-dark:hover {
    opacity: 0.9;
    transform: translateY(-2px);
    transition: 0.2s ease-in-out;
  }
</style>
