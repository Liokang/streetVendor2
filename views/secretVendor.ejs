<%- include('boilerplate/header') %>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
  <div class="container">
    <a class="navbar-brand fw-bold fs-4" href="#">ATUL</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Features</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Pricing</a></li>
      </ul>
      <% if(isloggedIn){ %>
        <a class="btn btn-outline-light rounded-pill px-3" href="/logout">Logout</a>
      <% } else { %>
        <a class="btn btn-outline-light rounded-pill px-3 me-2" href="/login">Login</a>
        <a class="btn btn-warning rounded-pill px-3" href="/signup">Sign Up</a>
      <% } %>
    </div>
  </div>
</nav>

<!-- Vendor Dashboard -->
<section class="container my-5">
  <% if(isloggedIn){ %>
    <div class="row g-4">
      <!-- Edit Cart -->
      <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-4 h-100">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcSi8k7vA9th6I8fb_-RpYxE5nkedH5VcTtu7A&usqp=CAU" 
               class="card-img-top rounded-top-4" alt="Edit Cart" style="height: 250px; object-fit: cover;">
          <div class="card-body text-center">
            <a href="/vendorstore" class="btn btn-primary w-100 rounded-pill">Edit your Cart</a>
          </div>
        </div>
      </div>

      <!-- Edit Profile -->
      <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-4 h-100">
          <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcRgdWERCMafVYXg9UYN8FUce7bqrdQLmQSShA&usqp=CAU" 
               class="card-img-top rounded-top-4" alt="Edit Profile" style="height: 250px; object-fit: cover;">
          <div class="card-body text-center">
            <a href="/editprofilevendor" class="btn btn-primary w-100 rounded-pill">Edit your Profile</a>
          </div>
        </div>
      </div>

      <!-- Order List -->
      <div class="col-md-4">
        <div class="card shadow-lg border-0 rounded-4 h-100">
          <img src="https://cdn.vectorstock.com/i/preview-1x/20/42/order-list-line-icon-vector-47022042.jpg" 
               class="card-img-top rounded-top-4" alt="Order List" style="height: 250px; object-fit: cover;">
          <div class="card-body text-center">
            <a href="/orderlist" class="btn btn-primary w-100 rounded-pill">Order List</a>
          </div>
        </div>
      </div>
    </div>
  <% } else { %>
    <div class="text-center my-5">
      <a href="/loginvendor" class="btn btn-warning btn-lg rounded-pill">Login First</a>
    </div>
  <% } %>
</section>

<%- include('boilerplate/footer') %>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }

  .card-img-top {
    transition: transform 0.3s ease;
  }

  .card:hover .card-img-top {
    transform: scale(1.05);
  }

  .btn-primary:hover {
    opacity: 0.9;
    transform: translateY(-2px);
    transition: 0.2s ease-in-out;
  }
</style>
