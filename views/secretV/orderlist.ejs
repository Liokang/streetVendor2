<%- include('../boilerplate/header') %>

<!-- Page Title -->
<section class="py-5 bg-light">
  <div class="container text-center">
    <h1 class="fw-bold">Order List</h1>
  </div>
</section>

<!-- Orders Container -->
<section class="py-4">
  <div class="container">
    <% for (let i = 0; i < tempVendorDetails.length; i++) { %>
      <div class="card shadow-sm mb-4 p-4">
        <h4 class="fw-bold mb-2">Order <%= i + 1 %></h4>
        <p class="mb-1"><strong>Date:</strong> 2023-06-30</p>
        <p class="mb-1"><strong>Customer Name:</strong> <%= tempVendorDetails[i].name %></p>
        <p class="mb-1"><strong>Phone Number:</strong> <%= tempVendorDetails[i].phoneNumber %></p>
        <p class="mb-3"><strong>Address:</strong> <%= tempVendorDetails[i].address %></p>

        <ul class="list-unstyled mb-3">
          <% for (let j = 0; j < tempVendorDetails[i].products.length; j++) { %>
            <li class="mb-2">
              <span class="fw-semibold">Name:</span> <%= tempVendorDetails[i].products[j].product %>
              <span class="ms-3"><strong>Quantity:</strong> <%= tempVendorDetails[i].products[j].quantity %></span>
              <span class="ms-3"><strong>Price:</strong> â‚¹<%= tempVendorDetails[i].products[j].price %></span>
            </li>
          <% } %>
        </ul>

        <div class="d-flex gap-2">
          <form action="/deleteorder/<%= tempVendorDetails[i]._id %>" method="POST">
            <button type="submit" class="btn btn-danger rounded-pill px-4">Order Completed</button>
          </form>
          <a href="/trackyourorder/<%= tempVendorDetails[i]._id %>" class="btn btn-primary rounded-pill px-4">Track Your Order</a>
        </div>
      </div>
    <% } %>
  </div>
</section>

<%- include('../boilerplate/footer') %>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
    background-color: #f2f2f2;
  }

  .card {
    background-color: #fff;
    border-radius: 12px;
  }

  .btn-primary, .btn-danger {
    transition: 0.2s ease-in-out;
  }

  .btn-primary:hover, .btn-danger:hover {
    transform: translateY(-2px);
    opacity: 0.9;
  }

  a.btn {
    color: #fff;
    text-decoration: none;
  }
</style>
