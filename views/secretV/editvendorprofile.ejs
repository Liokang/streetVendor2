<%- include('../boilerplate/header') %>

<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
  <div class="container">
    <a class="navbar-brand fw-bold" href="#">ATUL</a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarText">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Features</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Pricing</a></li>
      </ul>
      <% if (isloggedIn) { %>
        <a class="btn btn-outline-light rounded-pill px-3" href="/logout">Logout</a>
      <% } else { %>
        <a class="btn btn-outline-light rounded-pill px-3 me-2" href="/login">Login</a>
        <a class="btn btn-warning rounded-pill px-3" href="/signup">Sign Up</a>
      <% } %>
    </div>
  </div>
</nav>

<!-- Vendor Edit Profile Form -->
<section class="d-flex align-items-center justify-content-center min-vh-100 bg-light">
  <% if (isloggedIn) { %>
    <div class="card shadow-lg border-0 rounded-4 p-4" style="max-width: 450px; width: 100%;">
      <div class="card-body">
        <h3 class="text-center fw-bold mb-4">Edit Vendor Profile</h3>

        <!-- Current Image Preview -->
        <% if (details.image) { %>
          <div class="text-center mb-4">
            <img src="<%- details.image %>" alt="Vendor Image" class="rounded-circle" style="width:100px; height:100px; object-fit:cover;">
          </div>
        <% } %>

        <form action="/editprofilevendor" method="POST">
          <input type="hidden" name="_method" value="PATCH">

          <div class="mb-3">
            <label for="fornameinput" class="form-label fw-semibold">Name</label>
            <input type="text" class="form-control form-control-lg rounded-pill px-3" 
                   id="fornameinput" name="name" value="<%- details.name %>" required>
          </div>

          <div class="mb-3">
            <label for="fornameimage" class="form-label fw-semibold">Image URL</label>
            <input type="text" class="form-control form-control-lg rounded-pill px-3" 
                   id="fornameimage" name="image" value="<%- details.image %>" placeholder="Paste Image URL" required>
          </div>

          <div class="mb-3">
            <label for="fornamephone" class="form-label fw-semibold">Phone Number</label>
            <input type="text" class="form-control form-control-lg rounded-pill px-3" 
                   id="fornamephone" name="phoneno" value="<%- details.phoneNumber %>" required>
          </div>

          <div class="mb-3">
            <label for="exampleInputPassword1" class="form-label fw-semibold">Password</label>
            <input type="password" class="form-control form-control-lg rounded-pill px-3" 
                   id="exampleInputPassword1" name="password" value="<%- details.password %>" required>
          </div>

          <button type="submit" class="btn btn-dark w-100 rounded-pill py-2">Update Profile</button>
        </form>
      </div>
    </div>
  <% } else { %>
    <div class="text-center my-5">
      <a href="/loginvendor" class="btn btn-warning btn-lg rounded-pill">Login First</a>
    </div>
  <% } %>
</section>

<%- include('../boilerplate/footer') %>

<style>
  body {
    font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, Helvetica, Arial, sans-serif;
  }

  .card {
    background: #ffffff;
  }

  .form-control:focus {
    border-color: #000;
    box-shadow: 0 0 0 0.2rem rgba(0,0,0,0.1);
  }

  .btn-dark:hover {
    opacity: 0.9;
    transform: translateY(-2px);
    transition: 0.2s ease-in-out;
  }

  img.rounded-circle {
    border: 1px solid #ddd;
  }
</style>
