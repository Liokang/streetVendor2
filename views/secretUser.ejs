<%- include('boilerplate/header') %>

<body style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; background-color: #f5f5f7;">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
  <div class="container">
    <a class="navbar-brand fw-bold" href="#">ATUL</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Features</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Pricing</a></li>
      </ul>
      <% if(isloggedIn){ %>
        <a class="btn btn-outline-light btn-sm ms-auto" href="/logout">Logout</a>
      <% } else { %>
        <div class="d-flex ms-auto gap-2">
          <a class="btn btn-outline-light btn-sm" href="/login">Login</a>
          <a class="btn btn-primary btn-sm" href="/signup">Sign Up</a>
        </div>
      <% } %>
    </div>
  </div>
</nav>

<% if(isloggedIn){ %>
  <div class="d-flex justify-content-center align-items-center flex-wrap gap-4 py-5">

    <div class="card apple-card">
      <img src="https://icon-library.com/images/photo-edit-icon/photo-edit-icon-23.jpg" class="card-img-top" alt="Edit Profile">
      <div class="card-body text-center">
        <h5 class="card-title fw-semibold">EDIT YOUR PROFILE</h5>
        <a href="/edituserprofile" class="btn btn-primary rounded-pill mt-2">CLICK ME</a>
      </div>
    </div>

    <div class="card apple-card">
      <img src="https://thumbs.dreamstime.com/b/%E7%8E%B0%E5%9C%A8%E5%91%BD%E4%BB%A4%E4%BC%98%E8%B4%A8%E7%BA%A2%E8%89%B2%E6%A0%87%E8%AE%B0%E6%A0%87%E5%BF%97-124737434.jpg" class="card-img-top" alt="Order Now">
      <div class="card-body text-center">
        <h5 class="card-title fw-semibold">ORDER NOW</h5>
        <a href="/ordernow" class="btn btn-danger rounded-pill mt-2">CLICK ME</a>
      </div>
    </div>

  </div>
<% } else { %>
  <div class="container text-center py-5">
    <a href="/login" class="text-decoration-none"><h2 class="mt-5">Please Login to Continue</h2></a>
  </div>
<% } %>

<style>
  .apple-card {
    width: 280px;
    background-color: #fff;
    border-radius: 20px;
    box-shadow: 0 10px 20px rgba(0,0,0,0.08);
    transition: transform 0.2s, box-shadow 0.2s;
  }
  .apple-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 15px 25px rgba(0,0,0,0.12);
  }
  .apple-card img {
    border-top-left-radius: 20px;
    border-top-right-radius: 20px;
    object-fit: cover;
    height: 180px;
    width: 100%;
  }
  .btn-primary, .btn-danger {
    font-weight: 600;
    padding: 6px 18px;
    transition: 0.2s ease-in-out;
  }
  .btn-primary:hover {
    background-color: #0a84ff;
    transform: translateY(-1px);
  }
  .btn-danger:hover {
    background-color: #ff3b30;
    transform: translateY(-1px);
  }
</style>

<%- include('boilerplate/footer') %>
