<%- include('../boilerplate/header') %>

<body style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; background-color: #f5f5f7;">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
  <div class="container">
    <a class="navbar-brand fw-bold" href="#">ATUL</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Features</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Pricing</a></li>
      </ul>
      <% if(isloggedIn){ %>
        <a class="btn btn-outline-light btn-sm ms-auto" href="/logout">Logout</a>
      <% } else { %>
        <div class="d-flex ms-auto gap-2">
          <a class="btn btn-outline-light btn-sm" href="/login">Login</a>
          <a class="btn btn-primary btn-sm" href="/signup">Sign Up</a>
        </div>
      <% } %>
    </div>
  </div>
</nav>

<div class="container py-5" style="max-width: 800px;">

  <h2 class="text-center fw-bold mb-4">Checkout</h2>

  <!-- Vendor Info Card -->
  <div class="card shadow-sm rounded-4 mb-4 p-3 d-flex align-items-center gap-3">
    <img src="<%- list.image %>" alt="Vendor Image" style="width: 120px; height: 120px; object-fit: cover; border-radius: 12px;">
    <div>
      <h4 class="fw-semibold mb-1"><%- list.name %></h4>
      <p class="text-muted mb-0"><%- list.phoneNumber %></p>
    </div>
  </div>

  <!-- User Cart Table -->
  <div class="card shadow-sm rounded-4 mb-4 p-3">
    <table class="table table-borderless mb-0">
      <thead>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Quantity</th>
        </tr>
      </thead>
     <tbody>
  <% if(tempUserCart.length > 0) { %>
    <% for (var i = 0; i < tempUserCart.length; i++) { %>
      <tr>
        <td><%- tempUserCart[i].product %></td>
        <td>â‚¹<%- tempUserCart[i].price %></td>
        <td><%- tempUserCart[i].quantity %></td>
      </tr>
    <% } %>
  <% } else { %>
    <tr>
      <td colspan="3" class="text-center">Your cart is empty</td>
    </tr>
  <% } %>
</tbody>

    </table>
  </div>

  <!-- Geolocation & Checkout Form -->
  <div class="d-flex flex-column gap-3 mb-4">
    <button type="button" onclick="getLocation()" class="btn btn-primary rounded-pill py-2">Get Current Location</button>
    
    <form action="/checkout/<%- list._id %>" method="post" class="d-flex flex-column gap-2">
      <input type="text" id="latitude-input" name="latitude" placeholder="Latitude" readonly class="form-control rounded-pill">
      <input type="text" id="longitude-input" name="longitude" placeholder="Longitude" readonly class="form-control rounded-pill">
      <button type="submit" class="btn btn-success rounded-pill py-2 mt-2">Proceed to Purchase</button>
    </form>
  </div>

</div>

<script>
  function getLocation() {
    if (navigator.geolocation) {
      navigator.geolocation.getCurrentPosition(function(position) {
        document.getElementById("latitude-input").value = position.coords.latitude;
        document.getElementById("longitude-input").value = position.coords.longitude;
      });
    } else {
      alert("Geolocation is not supported by this browser.");
    }
  }
</script>

<style>
  .card {
    background-color: #fff;
    border-radius: 16px;
    transition: 0.2s ease-in-out;
  }
  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.1);
  }
  .btn-primary, .btn-success {
    transition: 0.2s ease-in-out;
  }
  .btn-primary:hover {
    background-color: #0a84ff;
  }
  .btn-success:hover {
    background-color: #30d158;
  }
  input.form-control {
    border-radius: 50px;
    transition: 0.2s ease-in-out;
  }
  input.form-control:focus {
    box-shadow: 0 0 0 0.2rem rgba(10,132,255,0.25);
  }
</style>

<%- include('../boilerplate/footer') %>
