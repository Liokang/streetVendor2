<%- include('../boilerplate/header') %>

<body style="font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto, Helvetica, Arial, sans-serif; background-color: #f5f5f7;">

<nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
  <div class="container">
    <a class="navbar-brand fw-bold" href="#">ATUL</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarText">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarText">
      <ul class="navbar-nav me-auto">
        <li class="nav-item"><a class="nav-link active" href="/">Home</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Features</a></li>
        <li class="nav-item"><a class="nav-link" href="#">Pricing</a></li>
      </ul>
      <% if(isloggedIn){ %>
        <a class="btn btn-outline-light btn-sm ms-auto" href="/logout">Logout</a>
      <% } else { %>
        <div class="d-flex ms-auto gap-2">
          <a class="btn btn-outline-light btn-sm" href="/login">Login</a>
          <a class="btn btn-primary btn-sm" href="/signup">Sign Up</a>
        </div>
      <% } %>
    </div>
  </div>
</nav>

<% if(isloggedIn){ %>
<section class="py-5">
  <div class="container" style="max-width: 600px;">
    <div class="card shadow-sm p-4 rounded-4 bg-white">
      <h3 class="text-center fw-bold mb-4">Edit Profile</h3>

      <form action="/signupuser" method="POST" class="d-flex flex-column gap-3">
        <input type="text" name="name" class="form-control rounded-pill" placeholder="Name" value="<%-details.name %>" required>
        <input type="text" name="phone" class="form-control rounded-pill" placeholder="Phone Number" value="<%-details.phoneNumber %>" required>
        <input type="email" name="email" class="form-control rounded-pill" placeholder="Email" value="<%-details.email %>" required>
        <input type="text" name="address" class="form-control rounded-pill" placeholder="Address" value="<%-details.address %>" required>
        <input type="password" name="password" class="form-control rounded-pill" placeholder="Password" value="<%-details.password %>" required>
        <button type="submit" class="btn btn-primary w-100 rounded-pill py-2 mt-2">Update Profile</button>
      </form>

    </div>
  </div>
</section>
<% } else { %>
<div class="container text-center py-5">
  <h3 class="mb-3">You need to login first</h3>
  <a href="/login" class="btn btn-primary rounded-pill px-4 py-2">Login</a>
</div>
<% } %>

<style>
  .card {
    background-color: #fff;
    transition: 0.2s ease-in-out;
  }
  .card:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 24px rgba(0,0,0,0.1);
  }
  input.form-control:focus {
    box-shadow: 0 0 0 0.2rem rgba(10,132,255,0.25);
  }
</style>

<%- include('../boilerplate/footer') %>
